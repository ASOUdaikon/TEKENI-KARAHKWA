using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public static class NodeHelper {

    public static int GetNodeArrayElementFromFloat(float coord)
    {
        // pass in 3.5

        int product;                    
        int number = Mathf.FloorToInt(coord);   // 3
        float decRemainder = coord - number;    // 3.5 - 3 = 0.5

        product = number * 2;                   // 6

        if (decRemainder >= 0.5f)               // ??? is 0.5
        {
            product += 1;                       // 6 += 1 ==> 7
        }

        return product;                         // 7

        // Node nodeToReturn = nodeGraph.GetNodeAt(productX, productY);

        // return nodeToReturn;
    }

